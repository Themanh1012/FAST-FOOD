@model FAST_FOOD.Models.Danhmuc

@{
    ViewBag.Title = "Xóa Danh Mục";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4 border-danger">
                <h2 class="text-danger text-center mb-3">@ViewBag.Title</h2>

                <div class="alert alert-danger text-center fw-bold">
                    <strong>Bạn có chắc chắn muốn xóa danh mục này không?</strong>
                </div>
             

                    <div class="card bg-light border-0 shadow-sm mb-4">
                        <div class="card-body text-center">
                           <h5 class="fw-bold text-secondary" >Tên Danh Mục</h5>


                            <p class="fs-5 text-dark mt-2 mb-0">
                                @Model.TenDanhMuc
                            </p>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="text-center mt-3">
                            <input type="submit" value="🗑️ Xóa" class="btn btn-danger" /> |
                            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary px-4 ms-2" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
