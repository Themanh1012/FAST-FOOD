@model FAST_FOOD.Models.Danhmuc

@{
    ViewBag.Title = "Chỉnh sửa danh mục";
}

<h2 class="text-warning">Chỉnh sửa danh mục</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.DanhMucId)
<div class="form-horizontal">
 <div class="form-group mb-3">
        @Html.LabelFor(model => model.TenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cập Nhật" class="btn btn-warning text-white" />
            @Html.ActionLink("Huỷ","Index",null, new {@class="btn btn-secondary ms-2"})
        </div>
    </div>
</div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
