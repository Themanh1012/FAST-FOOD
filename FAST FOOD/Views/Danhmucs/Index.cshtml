@model IEnumerable<FAST_FOOD.Models.Danhmuc>

@{
    ViewBag.Title = "Danh Sách Danh Mục";
}

<h2 class="text-center text-primary mt-3" >@ViewBag.Title</h2>

<p>
    @Html.ActionLink(" ➕ Thêm Danh  Mục Mới", "Create", null, new {@class ="btn btn-success mb-3"})
</p>
<table class="table table-striped table-bordered text-center align-middle shadow">
    <thead class="table-dark">
    <tr>
        <th>
            Tên Danh Mục
        </th> 
        <th>Hành Động</th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.TenDanhMuc
            </td>
            <td>
                @Html.ActionLink("✏️ Sửa", "Edit", new { id = item.DanhMucId }, new {@class="btn -btn-warning btn-sm mx-1"}) |
                @Html.ActionLink("👁️ Chi Tiết", "Details", new { id = item.DanhMucId }, new {@class="btn btn-info btn-sm mx- text-white"}) |
                @Html.ActionLink("🗑️ Xóa", "Delete", new { id = item.DanhMucId } , new {@class="btn btn-danger btn-sm mx-1"})
            </td>
        </tr>
    }

</table>
